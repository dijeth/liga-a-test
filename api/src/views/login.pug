extends layout

block main
  .row
    .col
      form(method="post", action="/login")
        .mb-3
          label(for="email") Email
          input.form-control(type="email", id="email", name="email", value=oldData.email, required)
          p.text-danger.text-sm #{errors.email}

        .mb-3
          label(for="password") Password
          input.form-control(type="password", id="password", name="password", required)
          p.text-danger.text-sm #{errors.password}

        .mt-6
          button.btn.btn-primary.btn-md(type="submit") Login
    .col
